<style>
    .cooperation-item {
        width: 400px;
        height: 140px;
        padding: 10px;
        float: left;
        border: 1px solid #eee;
        box-shadow: 0 2px 4px 0 rgba(8, 1, 3, .15);
        margin: 10px 15px;
    }

    .cooperation-type {
        font-size: 20px;
        font-weight: 600;
        line-height: 24px;
        vertical-align: bottom;
    }
    .cooperation-head {
        padding: 0 20px;
        text-align: center;
        font-size: 20px;
        font-weight: 700;
        line-height: 24px;
        overflow: hidden;
        border-bottom: 1px solid #eee;
    }
    .cooperation-title {
    }
    .cooperation-content {
        height: 90px;
        padding-top: 10px;
    }

    .cooperation-from {
        color: #888888;
        font-size: 12px;
        text-align: right;
    }
    .cooperation-time {
        margin-left: 10px;
    }
</style>

<div class="cooperation-item">
    <div class="coopeartion-text">
        <div class="cooperation-head">
            <span class="cooperation-type">
                {{cooperation.type}}:
            </span>
            <span class="cooperation-title">
                {{cooperation.title}}
            </span>
        </div>
        <div class="cooperation-content">
            {{#if cooperation.isNew}}
                消息内容：{{cooperation.content}}
            {{else if cooperation.isAskDevice}}
                <p>申请使用设备：{{cooperation.device}}</p>
                <p>申请使用理由：{{cooperation.reason}}</p>
            {{else if cooperation.isActivity}}
                活动内容：{{cooperation.content}}
            {{else}}
                此条记录出错，请联系管理员。
            {{/if}}
        </div>
        <div class="cooperation-from">
            <span>FROM: {{cooperation.from}}</span>
            <span class="cooperation-time">{{cooperation.time}}</span>
        </div>
    </div>
</div>

{{yield}}