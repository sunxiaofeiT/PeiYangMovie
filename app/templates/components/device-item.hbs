<style>
    .device-item {
        width: 293px;
        height: 410px;
        border: 1px solid #eee;
        box-shadow: 0 1px 2px 0 rgba(8,1,3,.15);
        margin-left: auto;
        margin-right: auto;
        float: left;
        margin: 10px 10px;
    }
    .device-img {
        width: 293px;
        height: 195px;
        border: none;
    }
    .device-text {
        padding: 15px;
    }
    .device-name {
        font-size: 24px;
        font-weight: 700;
        line-height: 26px;
    }
    .device-model {
        margin-left: 20px;
    }
    .device-desc {
        height: 120px;
        margin: 10px 0;
    }
    .device-using {
        border-left: 4px solid #188fff;
        padding-left: 10px;
        color: #555;
    }
    .device-useNumber {
        float: right;
        color: #bbb;
    }
</style>

<div class="device-item">
    <div class="device-img-div">
        <img class="device-img" src={{device.image}}>
    </div>
    <div class="device-text">
        <div class="device-detail">
            <div class="device-info">
                <span class="device-name">{{device.name}}</span>
                <span class="device-model">{{device.model}}</span>
            </div>
            <div class="device-desc">
                <p>{{device.desc}}</p>
            </div>
        </div>
        <p class="device-using">
            <span>
            {{#if device.using}}
                正在使用中
            {{else}}
                闲置中
            {{/if}}
            </span>
            <span class="device-useNumber">
                已使用次数：{{device.useNumber}}
            </span>
        </p>
    </div>
</div>

{{yield}}